{
	"extends": "expo/tsconfig.base",
	"references": [
		{
			"path": "../../packages/shared/tsconfig.json"
		}
	],
	"compilerOptions": {
		"incremental": true,
    "skipLibCheck": true,
		"composite": true,
		"strict": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./*"
			],
			"@hederawise/shared/src/*": ["../../packages/shared/src/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	]
}
